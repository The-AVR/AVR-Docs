{
  "dependencies": {
    "autoprefixer": "^10.4.16",
    "cspell": "^8.0.0",
    "glightbox": "^3.2.0",
    "hugo-extended": "^0.119.0",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "rimraf": "^5.0.5"
  },
  "devDependencies": {
    "get-folder-size": "^4.0.0",
    "markdownlint-cli": "^0.37.0",
    "open-cli": "^7.2.0",
    "pre-commit": "^1.2.2",
    "prettier": "^3.1.0"
  },
  "scripts": {
    "build": "hugo --cleanDestinationDir --minify --logLevel info && rimraf public/favicons/",
    "format": "prettier --write content/",
    "format:check": "prettier --check content/",
    "lint": "markdownlint content/",
    "server": "open-cli http://localhost:1313 && hugo server -p 1313",
    "spellcheck": "cspell \"content/**/*.md\"",
    "postinstall": "python configure.py",
    "make-patch": "cd themes/docsy && git diff > ../docsy.patch",
    "check-size": "node check-size.js"
  },
  "cspell": {
    "dictionaries": [
      "avr-wordlist"
    ],
    "dictionaryDefinitions": [
      {
        "name": "avr-wordlist",
        "path": "./avr-wordlist.txt"
      }
    ]
  },
  "prettier": {
    "proseWrap": "always",
    "printWidth": 88
  },
  "pre-commit": [
    "spellcheck",
    "format:check"
  ],
  "type": "module"
}
